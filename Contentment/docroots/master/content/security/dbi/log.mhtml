% if ($failure) {
<& /content/error, message => "Incorrect username or password." &>
% }

% if ($context->current_user) {
If you aren't <%$context->current_user->{fullname}%> 
<&| /content/widget/link, action => '/content/security/dbi/logout', default_map => '/content/security/dbi/map' &>click here</&>.
% } else {
<&| /content/widget/form, action => '/content/security/dbi/check_login', default_map => '/content/security/dbi/map' &>
<table>
<tr>
<td><&| /content/widget/label, name => 'username' &>Username</&></td>
<td><& /content/widget/input_text, name => 'username', size => 10, maxlength => 30 &></td>
</tr>
<tr>
<td><&| /content/widget/label, name => 'password' &>Password</&></td>
<td><& /content/widget/input_password, name => 'password', size => 10, maxlength => 100 &></td>
</tr>
<tr>
<td colspan="2"><& /content/widget/input_submit, label => 'Login' &></td>
</tr>
</table>
</&>
% }

<%args>
$failure => 0
</%args>

<%attr>
title => 'Login'
kind => 'text/html'
</%attr>
