<%init>
use MIME::Types;
my $types = MIME::Types->new;
$context->original_kind($types->mimeTypeOf($filename));

my @dirs = map $$_[1], @comp_dirs;

for my $dir (@dirs) {
	next unless -f "$dir/$filename";

	open FH, "$dir/$filename" or die "Error opening file '$filename'.";
	binmode FH;
	my $buf;
	while (read FH, $buf, 4096) {
		print $buf;
	}
	close FH;
	return;
}
</%init>
<%args>
$filename
</%args>
<%flags>
inherit => undef
</%flags>
