<input type="text" name="<% $name %>" size="<% $size %>" maxlength="<% $maxlength %>"
% if (defined $value) {
	value="<% $value %>"
% }
/>

<%init>
$context->add_widget(
	processor => 'process_input',
	name      => $name);

my $value = !$override && defined $ARGS{$name} ? $ARGS{$name} : $default;

$name = $context->form_id.".$name";
</%init>

<%args>
$name
$size => 50
$maxlength => 255
$default => undef
$override => 0
</%args>
